<h1>Products List</h1>
 
<table class="table table-hover">
 
  <thead class="table-dark">
    <tr>
      <th>Product</th>
    </tr>
  </thead>
 
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to 'Show Product', product_path(product) %></td>

      </tr>
    <% end %>
  </tbody>
 
</table>